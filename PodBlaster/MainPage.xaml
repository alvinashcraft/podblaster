<Page
    x:Class="PodBlaster.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PodBlaster"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListView SelectionMode="None" x:Name="PodList" IsItemClickEnabled="True" ItemClick="PodList_ItemClick" HorizontalAlignment="Left" Height="907" Margin="10,10,0,0" VerticalAlignment="Top" Width="293" >

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel >
                        <TextBlock Text="{Binding stationName}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ComboBox x:Name="epDownloads" HorizontalAlignment="Left" Margin="368,241,0,0" VerticalAlignment="Top" Height="58" Width="166" PlaceholderText="# of Eps">
            <x:String>1</x:String>
            <x:String>2</x:String>
            <x:String>3</x:String>
            <x:String>4</x:String>
            <x:String>5</x:String>
            <x:String>6</x:String>
            <x:String>7</x:String>
        </ComboBox>
        <Button Content="Copy Eps to MP3 Player" HorizontalAlignment="Left" Margin="368,154,0,0" VerticalAlignment="Top" Height="58" Width="178" Click="Copy_Files_to_MP3"/>
        <Button Content="Clear Downloaded Cache" HorizontalAlignment="Left" Margin="368,65,0,0" VerticalAlignment="Top" Height="58" Width="201" Click="Clear_Cache_Button_Click"/>



    </Grid>
</Page>
